 <Label text="Valor:"     GridPane.columnIndex="0" GridPane.rowIndex="0"  />
 <TextField fx:id="valor" PrefWidth="20" focusTraversable="false" 
 	 GridPane.columnIndex="1" GridPane.rowIndex="0" />                   
  
